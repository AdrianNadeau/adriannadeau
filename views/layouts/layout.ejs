  <!-- load plugins.js then theme.js once, then safely init -->
  <script>
  (function(){
    if (window.__assetsLoaderStarted) return;
    window.__assetsLoaderStarted = true;
    function loadScript(src, cb){
      var s = document.createElement('script');
      s.src = src;
      s.async = false;
      s.onload = cb || function(){};
      s.onerror = function(){ console.error('Failed to load', src); cb && cb(); };
      document.body.appendChild(s);
    }
    loadScript('/assets/js/plugins.js', function(){
      loadScript('/assets/js/theme.js', function(){
        (function safeInit(retries){
          retries = retries || 0;
          if (window.__themeInited) return;
          if (window.theme && typeof window.theme.init === 'function') {
            try { window.theme.init(); window.__themeInited = true; } catch(e){ console.error('theme.init error', e); }
            return;
          }
          if (retries < 20) setTimeout(function(){ safeInit(retries + 1); }, 200);
          else console.warn('theme.init not available after retries');
        })();
      });
    });
  })();
  
  // Function to load background images
  function loadBackgroundImages() {
    const slides = document.querySelectorAll('.swiper-slide[data-image-src]');
    slides.forEach(function(slide) {
      const imageSrc = slide.getAttribute('data-image-src');
      if (imageSrc) {
        slide.style.backgroundImage = `url('${imageSrc}')`;
        slide.style.backgroundSize = 'cover';
        slide.style.backgroundPosition = 'center';
        slide.style.backgroundRepeat = 'no-repeat';
        console.log('Background image loaded:', imageSrc);
      }
    });
  }
  
  // Load background images immediately
  loadBackgroundImages();
  
  // Simple and fast Swiper initialization
  setTimeout(function() {
    console.log('Starting Swiper initialization...');
    
    // Load background images again before Swiper init
    loadBackgroundImages();
    
    // Remove any existing swiper classes that might conflict
    const swiperContainer = document.querySelector('.swiper-hero');
    if (swiperContainer) {
      swiperContainer.classList.remove('swiper-container-initialized');
      swiperContainer.classList.remove('swiper-container-horizontal');
    }
    
    const swiperEl = document.querySelector('.swiper-hero .swiper');
    if (swiperEl) {
      // Destroy existing instance if any
      if (swiperEl.swiper) {
        swiperEl.swiper.destroy(true, true);
      }
      
      // Clear any inline styles but preserve background images
      const wrapper = swiperEl.querySelector('.swiper-wrapper');
      if (wrapper) {
        wrapper.style.transform = '';
        wrapper.style.transitionDuration = '';
      }
      
      // Load background images one more time
      loadBackgroundImages();
      
      // Simple, reliable Swiper initialization
      if (window.Swiper) {
        const swiper = new window.Swiper(swiperEl, {
          // Basic settings
          loop: true,
          speed: 800,
          autoplay: {
            delay: 7000,
            disableOnInteraction: false,
          },
          // Navigation
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
          // Pagination
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
          },
          // Simple slide settings
          slidesPerView: 1,
          spaceBetween: 0,
          centeredSlides: false,
          // Enable touch
          allowTouchMove: true,
          // Simplified callbacks to prevent glitching
          on: {
            init: function() {
              console.log('✅ Swiper initialized successfully');
              // Add initialized class to show slider smoothly
              const swiperContainer = document.querySelector('.swiper-hero');
              if (swiperContainer) {
                swiperContainer.classList.add('swiper-initialized');
              }
              // Ensure background images are loaded after init
              setTimeout(loadBackgroundImages, 100);
            },
            slideChange: function() {
              console.log('Slide changed to:', this.activeIndex);
              // Reload background images after slide change
              setTimeout(loadBackgroundImages, 50);
            }
          }
        });
        
        console.log('Swiper instance created:', swiper);
      } else {
        console.error('❌ Swiper library not available');
      }
    } else {
      console.error('❌ Swiper element not found');
    }
  }, 1500);

  </script>
